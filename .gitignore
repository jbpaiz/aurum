# package-lock.json       # Allow - dependency lock
# tsconfig.json           # Allow - TypeScript configuration
# tailwind.config.js      # Allow - Tailwind configuration
# next.config.js          # Allow - Next.js configuration
# postcss.config.js       # Allow - PostCSS configuration
# vercel.json             # Allow - Vercel deployment configuration
# netlify.toml            # Allow - Netlify deployment configuration

